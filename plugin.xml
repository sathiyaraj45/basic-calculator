<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.sathiya.calculator.Calc"
    version="0.0.1">
    <name>Calculator</name>
    <description>The coolest Plugin ever implemented</description>
    <license>Apache 2.0</license>
    <keywords>cordova,calculator</keywords>
    <repo></repo>
    <issue></issue>

    <js-module src="www/Calc.js" name="Calc">
        <clobbers target="Calc" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Calc" >
                <param name="android-package" value="com.calculator.Calc"/>
            </feature>
        </config-file>
        <source-file src="src/android/com/calculator/Calc.java" target-dir="src/com/calculator" />
    </platform>

</plugin>
